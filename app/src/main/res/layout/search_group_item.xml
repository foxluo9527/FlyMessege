<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_110"
    android:orientation="horizontal"
    android:background="@drawable/item_press"
    android:padding="@dimen/d_10">

    <com.example.flymessagedome.view.CircleImageView
        android:id="@+id/head_img"
        android:layout_width="@dimen/d_80"
        android:layout_height="@dimen/d_80"
        android:layout_marginRight="@dimen/d_10"
        android:src="@mipmap/group" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/d_3"
            android:singleLine="true"
            android:text="群聊名称"
            android:textColor="@color/black_2"
            android:textSize="@dimen/d_17" />

        <TextView
            android:id="@+id/group_introduce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:text="群聊简介" />
    </LinearLayout>
</LinearLayout>