<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_white"
    tools:context=".ui.activity.GroupChatSettingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/d_50"
            android:layout_height="@dimen/d_50"
            android:padding="@dimen/d_15"
            app:srcCompat="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="群聊设置" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/group_msg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_60"
                android:background="@drawable/item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/head_img"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginHorizontal="@dimen/d_16"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名称" />

                    <TextView
                        android:id="@+id/group_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/d_13"
                        android:layout_marginTop="@dimen/d_3"
                        android:text="群聊简介" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/d_20"
                    android:layout_height="@dimen/d_20"
                    android:layout_marginHorizontal="@dimen/d_16"
                    app:srcCompat="@mipmap/right1" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/group_members"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_60"
                android:layout_marginTop="@dimen/d_10"
                android:background="@drawable/item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/d_16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="群聊成员" />

                <com.example.flymessagedome.view.CircleImageView
                    android:id="@+id/group_creator_head"
                    android:layout_width="@dimen/d_45"
                    android:layout_height="@dimen/d_45"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <ImageView
                    android:layout_width="@dimen/d_20"
                    android:layout_height="@dimen/d_20"
                    app:srcCompat="@mipmap/right1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginTop="@dimen/d_10"
                android:layout_marginBottom="@dimen/d_1"
                android:background="@drawable/item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/d_16"
                    android:text="群聊名称" />

                <TextView
                    android:id="@+id/group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/d_35"
                    android:gravity="right"
                    android:text="名称" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/share_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginTop="@dimen/d_1"
                android:layout_marginBottom="@dimen/d_1"
                android:background="@drawable/item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/d_16"
                    android:text="群号和二维码" />

                <TextView
                    android:id="@+id/group_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="群号" />

                <ImageView
                    android:layout_width="@dimen/d_20"
                    android:layout_height="@dimen/d_20"
                    android:layout_marginRight="@dimen/d_16"
                    app:srcCompat="@mipmap/right1" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/group_remarks_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginTop="@dimen/d_1"
                android:layout_marginBottom="@dimen/d_1"
                android:background="@drawable/item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/d_16"
                    android:text="我的群昵称" />

                <TextView
                    android:id="@+id/group_remarks_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="群昵称" />

                <ImageView
                    android:layout_width="@dimen/d_20"
                    android:layout_height="@dimen/d_20"
                    android:layout_marginRight="@dimen/d_16"
                    app:srcCompat="@mipmap/right1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_group_msg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginTop="@dimen/d_1"
                android:layout_marginBottom="@dimen/d_1"
                android:background="@drawable/item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/d_16"
                    android:layout_weight="1"
                    android:text="编辑群资料" />

                <ImageView
                    android:layout_width="@dimen/d_20"
                    android:layout_height="@dimen/d_20"
                    android:layout_marginRight="@dimen/d_16"
                    app:srcCompat="@mipmap/right1" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/chat_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginTop="@dimen/d_10"
                android:background="@drawable/item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/d_16"
                    android:layout_weight="1"
                    android:text="设为顶置" />

                <Switch
                    android:id="@+id/chat_top_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/message_important"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginTop="@dimen/d_1"
                android:background="@drawable/item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/d_16"
                    android:layout_weight="1"
                    android:text="消息免打扰" />

                <Switch
                    android:id="@+id/message_important_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chat_bg_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginTop="@dimen/d_10"
                android:layout_marginBottom="@dimen/d_10"
                android:background="@drawable/item_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/d_16"
                    android:layout_weight="1"
                    android:text="聊天背景" />

                <ImageView
                    android:layout_width="@dimen/d_20"
                    android:layout_height="@dimen/d_20"
                    android:layout_marginHorizontal="@dimen/d_16"
                    app:srcCompat="@mipmap/right1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chat_del"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginTop="@dimen/d_1"
                android:background="@drawable/item_press"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/d_16"
                    android:text="删除聊天记录"
                    android:textColor="@color/blue_1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/group_exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_marginTop="@dimen/d_10"
                android:background="@drawable/item_press"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/d_16"
                    android:text="退出群聊"
                    android:textColor="@color/red" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>