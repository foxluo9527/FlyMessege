<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_white"
    tools:context=".ui.activity.ShowUserMsgActivity">

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_marginBottom="@dimen/d_10">

        <ImageView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/d_50"
            android:layout_height="@dimen/d_50"
            android:padding="@dimen/d_16"
            app:srcCompat="@mipmap/back" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细资料" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_45"
                android:layout_marginBottom="10dp"
                android:background="@drawable/item_press"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/d_16">

                <TextView
                    android:layout_width="@dimen/d_45"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d_20"
                    android:text="用户名"
                    android:textColor="@color/black" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/u_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="我的用户名"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textSize="@dimen/d_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_45"
                android:layout_marginBottom="1dp"
                android:background="@drawable/item_press"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/d_16">

                <TextView
                    android:layout_width="@dimen/d_45"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d_20"
                    android:text="昵称"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/name"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="编辑昵称"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:textSize="@dimen/d_16" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_45"
                android:layout_marginBottom="1dp"
                android:background="@drawable/item_press"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/d_16">

                <TextView
                    android:layout_width="@dimen/d_45"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d_20"
                    android:text="年龄"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/age"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="我的年龄"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:textSize="@dimen/d_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_45"
                android:layout_marginBottom="1dp"
                android:background="@drawable/item_press"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/d_16">

                <TextView
                    android:layout_width="@dimen/d_45"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d_20"
                    android:text="生日"
                    android:textColor="@color/black" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="出生日期"
                    android:maxLength="25"
                    android:singleLine="true"
                    android:textSize="@dimen/d_16" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sex_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_45"
                android:layout_marginBottom="10dp"
                android:background="@drawable/item_press"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/d_16">

                <TextView
                    android:layout_width="@dimen/d_45"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="性别"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="未填" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_45"
                android:layout_marginTop="@dimen/d_1"
                android:layout_marginBottom="10dp"
                android:background="@drawable/item_press"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/d_16"
                android:textColor="@color/black">

                <TextView
                    android:layout_width="@dimen/d_45"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d_20"
                    android:text="地区"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="选择位置" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/edit_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_80"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_50"
            android:layout_margin="@dimen/d_15"
            android:layout_weight="1"
            android:background="@drawable/bga_pp_selector_btn_confirm"
            android:text="编辑资料" />
    </LinearLayout>
</LinearLayout>