<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_60"
    android:gravity="center_vertical"
    android:background="@drawable/item_press"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/del_account"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        android:padding="@dimen/d_10"
        android:visibility="gone"
        app:srcCompat="@drawable/cancel" />

    <com.example.flymessagedome.view.CircleImageView
        android:id="@+id/head_img"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        android:layout_margin="@dimen/d_10"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="@dimen/d_4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/d_5"
            android:text="昵称" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/d_5"
            android:text="用户名" />
    </LinearLayout>

    <ImageView
        android:id="@+id/on_login"
        android:layout_width="@dimen/d_14"
        android:layout_height="@dimen/d_14"
        android:layout_marginRight="10dp"
        android:src="@mipmap/dui"
        android:visibility="visible"
        tools:visibility="gone" />
</LinearLayout>