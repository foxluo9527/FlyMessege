<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_60"
    android:background="@drawable/item_press"
    android:clickable="true"
    android:focusable="false"
    android:orientation="horizontal">

    <com.example.flymessagedome.view.CircleImageView
        android:id="@+id/group_head"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d_16"/>

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/group_head"
        android:layout_toRightOf="@+id/group_head"
        android:text="群昵称"
        android:textColor="@color/black_5" />
</RelativeLayout>