<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_60"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.example.flymessagedome.view.CircleImageView
        android:id="@+id/head_img"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        android:layout_margin="@dimen/d_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contract_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/d_15"
            android:text="通讯录名称" />

        <TextView
            android:id="@+id/fly_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d_12"
            android:text="飞讯昵称" />
    </LinearLayout>

    <Button
        android:id="@+id/add_btn"
        android:layout_width="@dimen/d_80"
        android:layout_height="@dimen/d_30"
        android:background="@drawable/welcome_btn_press_bg"
        android:layout_marginHorizontal="@dimen/d_10"
        android:text="添加" />

    <TextView
        android:id="@+id/add_text"
        android:layout_width="@dimen/d_80"
        android:layout_height="@dimen/d_30"
        android:layout_marginHorizontal="@dimen/d_10"
        android:gravity="center"
        android:text="已添加"
        android:visibility="gone" />
</LinearLayout>